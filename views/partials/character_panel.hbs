<div class="mdc-card mdc-theme--background">

    <div class="card-head">
        <h3 class="mdc-typography--overline mdc-theme--secondary">{{title}}</h3>
        {{> toggle_button}}
    </div>

    <div class="card-body">
        <div class="char-slots-container">
            <div id="char-slots-{{charNum}}" class="info-section char-slots">
                <img id="tab-0-{{charNum}}" class="char-tab-unselected" alt="h-{{charNum}}-1" src="images/damage-calc/Portraits/Unselected.png" data-index="0" data-charnum="{{charNum}}">
                <img id="tab-1-{{charNum}}" class="char-tab-unselected" alt="h-{{charNum}}-2" src="images/damage-calc/Portraits/Unselected.png" data-index="1" data-charnum="{{charNum}}">
                <img id="tab-2-{{charNum}}" class="char-tab-unselected" alt="h-{{charNum}}-3" src="images/damage-calc/Portraits/Unselected.png" data-index="2" data-charnum="{{charNum}}">
                <img id="tab-3-{{charNum}}" class="char-tab-unselected" alt="h-{{charNum}}-4" src="images/damage-calc/Portraits/Unselected.png" data-index="3" data-charnum="{{charNum}}">
                <img id="tab-4-{{charNum}}" class="char-tab-unselected" alt="h-{{charNum}}-5" src="images/damage-calc/Portraits/Unselected.png" data-index="4" data-charnum="{{charNum}}">
            </div>
        </div>

        <section id="stats-{{charNum}}" class="mdc-card__supporting-text info-section stat-info">
            <h3 class="mdc-typography--caption mdc-theme--text-secondary-on-background">Base Stats</h3>
            <div class="stat-container">

                <div class="mdc-text-field">
                    <input type="number" id="hp-{{charNum}}" class="mdc-text-field__input more-than-zero hp-stat" value="1" data-charnum="{{charNum}}" autocomplete="off">
                    <label for="hp-{{charNum}}" class="mdc-floating-label mdc-floating-label--float-above" title="A unit is defeated if their Hit Points reach 0.">HP</label>
                    <div class="mdc-line-ripple"></div>
                </div>

                <div class="mdc-text-field">
                    <input type="number" id="atk-{{charNum}}" class="mdc-text-field__input more-than-zero battle-val" value="1" data-charnum="{{charNum}}" autocomplete="off">
                    <label for="atk-{{charNum}}" class="mdc-floating-label mdc-floating-label--float-above" title="The higher a unit's Attack, the more damage they deal.">ATK</label>
                    <div class="mdc-line-ripple"></div>
                </div>

                <div class="mdc-text-field">
                    <input type="number" id="spd-{{charNum}}" class="mdc-text-field__input more-than-zero battle-val" value="1" data-charnum="{{charNum}}" autocomplete="off">
                    <label for="spd-{{charNum}}" class="mdc-floating-label mdc-floating-label--float-above" title="A unit will attack twice if their Speed is at least 5 more than their foe's Speed.">SPD</label>
                    <div class="mdc-line-ripple"></div>
                </div>

                <div class="mdc-text-field">
                    <input type="number" id="def-{{charNum}}" class="mdc-text-field__input more-than-zero battle-val" value="1" data-charnum="{{charNum}}" autocomplete="off">
                    <label for="def-{{charNum}}" class="mdc-floating-label mdc-floating-label--float-above" title="The higher a unit's Defense is, the less damage they take from physical attacks.">DEF</label>
                    <div class="mdc-line-ripple"></div>
                </div>

                <div class="mdc-text-field">
                    <input type="number" id="res-{{charNum}}" class="mdc-text-field__input more-than-zero battle-val" value="1" data-charnum="{{charNum}}" autocomplete="off">
                    <label for="res-{{charNum}}" class="mdc-floating-label mdc-floating-label--float-above" title="The higher a unit's Resistance is, the less damage they take from magical attacks.">RES</label>
                    <div class="mdc-line-ripple"></div>
                </div>
            </div>
        </section>

        <nav id="char-tab-bar-{{charNum}}" class="mdc-tab-bar mdc-tab-bar--icons-with-text mdc-tab-bar-upgraded">
            <a class="mdc-tab mdc-tab--with-icon-and-text mdc-ripple-upgraded mdc-tab--active">
                <i class="material-icons mdc-tab__icon" aria-hidden="true">person</i>
                <span class="mdc-tab__icon-text">Build</span>
            </a>
            <a class="mdc-tab mdc-tab--with-icon-and-text mdc-ripple-upgraded">
                <i class="material-icons mdc-tab__icon" aria-hidden="true">report</i>
                <span class="mdc-tab__icon-text">Effects</span>
            </a>
            <span class="mdc-tab-bar__indicator"></span>
        </nav>

        <div class="mdc-card__media">
            <div class="tab-panel info-section build-fields mdc-layout-grid">
                <div class="mdc-layout-grid__inner">

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
                        <a id="char-link-{{charNum}}" class="mdc-theme--text-secondary-on-dark attribute-link" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        <div class="select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="char-{{charNum}}" class="mdc-select__native-control char-selector link-field" data-charnum="{{charNum}}" data-info="charInfo">
                                    <option value="None" selected></option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="char-{{charNum}}">Character</label>
                            </div>
                        </div>
                    </div>

                    <div class="collapsable mdc-layout-grid__cell mdc-layout-grid__cell--span-12" id="extra-char-info-{{charNum}}">
                        <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                            <select id="color-{{charNum}}" class="mdc-select__native-control color-selector" data-charnum="{{charNum}}">
                                <option value="Red" selected>Red</option>
                                <option value="Green">Green</option>
                                <option value="Blue">Blue</option>
                                <option value="Colorless">Colorless</option>
                            </select>
                            <label class="mdc-floating-label mdc-floating-label--float-above" for="color-{{charNum}}" >Color</label>
                        </div>
                        <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                            <select id="weapon-type-{{charNum}}" class="mdc-select__native-control weapon-type-selector" data-charnum="{{charNum}}">
                                <option value="Sword" selected>Sword</option>
                                <option value="Red Tome">Red Tome</option>
                                <option value="Red Breath">Red Breath</option>
                                <option value="Red Bow">Red Bow</option>
                                <option value="Red Dagger">Red Dagger</option>
                                <option value="Axe">Axe</option>
                                <option value="Green Tome">Green Tome</option>
                                <option value="Green Breath">Green Breath</option>
                                <option value="Green Bow">Green Bow</option>
                                <option value="Green Dagger">Green Dagger</option>
                                <option value="Lance">Lance</option>
                                <option value="Blue Tome">Blue Tome</option>
                                <option value="Blue Breath">Blue Breath</option>
                                <option value="Blue Bow">Blue Bow</option>
                                <option value="Blue Dagger">Blue Dagger</option>
                                <option value="Bow">Bow</option>
                                <option value="Dagger">Dagger</option>
                                <option value="Staff">Staff</option>
                                <option value="Colorless Breath">Colorless Breath</option>
                            </select>
                            <label class="mdc-floating-label mdc-floating-label--float-above" for="weapon-type-{{charNum}}" >Weapon Type</label>
                        </div>
                        <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                            <select id="move-type-{{charNum}}" class="mdc-select__native-control move-type-selector" data-charnum="{{charNum}}">
                                <option value="Infantry" selected>Infantry</option>
                                <option value="Cavalry">Cavalry</option>
                                <option value="Flying">Flying</option>
                                <option value="Armored">Armored</option>
                            </select>
                            <label class="mdc-floating-label mdc-floating-label--float-above" for="move-type-{{charNum}}" >Move Type</label>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <span class="attribute-link mdc-theme--text-secondary-on-background"><i class="material-icons">open_in_new</i></span>
                        <div class="mdc-layout-grid__inner">

                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                    <select id="rarity-{{charNum}}" class="mdc-select__native-control rarity-select build-select link-field" data-charnum="{{charNum}}">
                                        <option value="5" selected>5 Stars</option>
                                    </select>
                                    <label class="mdc-floating-label mdc-floating-label--float-above" for="rarity-{{charNum}}">Rarity</label>
                                </div>
                            </div>

                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                    <select id="merge-{{charNum}}" class="mdc-select__native-control merge-select build-select link-field" data-charnum="{{charNum}}" title="Merged units">
                                        <option value="0" selected>+0</option>
                                        <option value="1">+1</option>
                                        <option value="2">+2</option>
                                        <option value="3">+3</option>
                                        <option value="4">+4</option>
                                        <option value="5">+5</option>
                                        <option value="6">+6</option>
                                        <option value="7">+7</option>
                                        <option value="8">+8</option>
                                        <option value="9">+9</option>
                                        <option value="10">+10</option>
                                    </select>
                                    <label class="mdc-floating-label mdc-floating-label--float-above" for="merge-{{charNum}}">+Merge</label>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <span class="attribute-link mdc-theme--text-secondary-on-background"><i class="material-icons">open_in_new</i></span>
                        <div class="mdc-layout-grid__inner">
                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <div class="mdc-select mdc-select--box mdc-ripple-upgraded double-select">
                                    <select id="boon-{{charNum}}" class="mdc-select__native-control boon-select build-select link-field" data-charnum="{{charNum}}" title="Boon">
                                        <option value="neutral" selected>Neutral</option>
                                        <option value="hp">+HP</option>
                                        <option value="atk">+ATK</option>
                                        <option value="spd">+SPD</option>
                                        <option value="def">+DEF</option>
                                        <option value="res">+RES</option>
                                    </select>
                                    <label class="mdc-floating-label mdc-floating-label--float-above" for="boon-{{charNum}}">Boon</label>
                                </div>
                            </div>
                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <div class="mdc-select mdc-select--box mdc-ripple-upgraded double-select">
                                    <select id="bane-{{charNum}}" class="mdc-select__native-control bane-select build-select link-field" data-charnum="{{charNum}}" title="Bane">
                                        <option value="neutral" selected>Neutral</option>
                                        <option value="hp">-HP</option>
                                        <option value="atk">-ATK</option>
                                        <option value="spd">-SPD</option>
                                        <option value="def">-DEF</option>
                                        <option value="res">-RES</option>
                                    </select>
                                    <label class="mdc-floating-label mdc-floating-label--float-above" for="bane-{{charNum}}">Bane</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <span class="attribute-link mdc-theme--text-secondary-on-background"><i class="material-icons">open_in_new</i></span>
                        <div class="mdc-layout-grid__inner">

                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <div class="mdc-text-field mdc-text-field--upgraded info-section-bottom level">
                                    <label class="mdc-floating-label mdc-floating-label--float-above level-label" for="level-{{charNum}}" data-charnum="{{charNum}}">
                                        Level / 40
                                    </label>
                                    <input type="number" id="level-{{charNum}}" class="mdc-text-field__input more-than-zero level-val" data-charnum="{{charNum}}" value="40" autocomplete="on">
                                </div>
                            </div>

                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <h3 class="mdc-typography--caption">Arena Score:<br><span id="arena-score-{{charNum}}-denom" class="denominator arena-score-{{charNum}}-read">300</span></h3>
                            </div>

                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6" id="support-{{charNum}}">
                        <span class="attribute-link mdc-theme--text-secondary-on-background"><i class="material-icons">open_in_new</i></span>
                        <div class="mdc-layout-grid__inner">
                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                    <select id="summoner-support-{{charNum}}" class="mdc-select__native-control link-field" data-charnum="{{charNum}}">
                                        <option value="None" selected>---</option>
                                        <option value="c">C</option>
                                        <option value="b">B</option>
                                        <option value="a">A</option>
                                        <option value="s">S</option>
                                    </select>
                                    <label class="mdc-floating-label mdc-floating-label--float-above" for="summoner-support-{{charNum}}">SSupport</label>
                                </div>
                            </div>

                            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                                <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                    <select id="ally-support-{{charNum}}" class="mdc-select__native-control link-field" data-charnum="{{charNum}}">
                                        <option value="None" selected>---</option>
                                        <option value="c">C</option>
                                        <option value="b">B</option>
                                        <option value="a">A</option>
                                        <option value="s">S</option>
                                    </select>
                                    <label class="mdc-floating-label mdc-floating-label--float-above" for="ally-support-{{charNum}}">
                                        ASupport
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <a id="weapon-link-{{charNum}}" class="attribute-link mdc-theme--text-secondary-on-background" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        <div class="info-section weapon-select select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="weapon-{{charNum}}" class="mdc-select__native-control weapon-selector link-field" data-charnum="{{charNum}}" data-info="weaponInfo">
                                    <option value="None" selected></option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="extra-weapon-info-{{charNum}}" >
                                    <span id="extra-weapon-info-btn-{{charNum}}" data-section="{{id}}-extra-weapon-info">Weapon</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <a id="passive-a-link-{{charNum}}" class="attribute-link mdc-theme--text-secondary-on-background" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        <div class="select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="passive-a-{{charNum}}" class="mdc-select__native-control passive-selector link-field" data-charnum="{{charNum}}" data-skilltype="a" data-info="skillInfo">
                                    <option value="None" selected>---</option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="passive-a-{{charNum}}" class="passive-a-label">
                                    Passive A
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <div class="info-section refinement-select">
                            <span class="attribute-link mdc-theme--text-secondary-on-background"><i class="material-icons">open_in_new</i></span>
                            <div class="select-sizer">
                                <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                    <select id="refinement-{{charNum}}" class="mdc-select__native-control refinement-selector link-field" data-charnum="{{charNum}}" data-info="refinementsInfo">
                                        <option value="None" selected></option>
                                    </select>
                                   <label class="mdc-floating-label mdc-floating-label--float-above" for="refinement-info-{{charNum}}" >
                                       <span id="refinement-info-btn-{{charNum}}" data-section="{{id}}-refinement-info">Refinement</span>
                                   </label>
                               </div>
                           </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <a id="passive-b-link-{{charNum}}" class="attribute-link mdc-theme--text-secondary-on-background" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        <div class="select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="passive-b-{{charNum}}" class="mdc-select__native-control passive-selector link-field" data-charnum="{{charNum}}" data-skilltype="b" data-info="skillInfo">
                                    <option value="None" selected>---</option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="passive-b-{{charNum}}" class="passive-b-label">
                                    Passive B
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Defunct, need to phase out fields -->
                    <div id="extra-weapon-info-{{charNum}}" class="extra-info collapsable mdc-layout-grid__cell--span-12">
                       <div class="ability-desc-container">
                           <p id="weapon-desc-{{charNum}}" class="ability-desc"></p>
                           <label>Might</label>
                           <span id="weapon-might-{{charNum}}"  data-oldmt="0"></span>
                           <label>Range</label>
                           <span id="weapon-range-{{charNum}}" ></span>
                           <label>Magical</label>
                           <span id="weapon-magical-{{charNum}}" ></span>
                       </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <a id="assist-link-{{charNum}}" class="attribute-link mdc-theme--text-secondary-on-background" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        <div class="select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="assist-{{charNum}}" class="mdc-select__native-control assist-selector link-field" data-charnum="{{charNum}}" data-info="assistInfo">
                                    <option value="None" selected>---</option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="assist-{{charNum}}" class="assist-label">
                                    <span data-section="{{id}}-extra-assist-info" >Assist</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <a id="passive-c-link-{{charNum}}" class="attribute-link mdc-theme--text-secondary-on-background" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        <div class="select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="passive-c-{{charNum}}" class="mdc-select__native-control passive-selector link-field" data-charnum="{{charNum}}" data-skilltype="c" data-info="skillInfo">
                                    <option value="None" selected>---</option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="passive-c-{{charNum}}" class="passive-c-label">
                                    Passive C
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <a id="special-link-{{charNum}}" class="attribute-link mdc-theme--text-secondary-on-background" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        <div class="select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="special-{{charNum}}" class="mdc-select__native-control special-selector link-field" data-charnum="{{charNum}}" data-info="specialInfo">
                                    <option value="None" selected>---</option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="special-{{charNum}}" class="special-label">
                                    Special
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <span class="attribute-link mdc-theme--text-secondary-on-background"><i class="material-icons">open_in_new</i></span>
                        <div class="select-sizer">
                            <div class="mdc-select mdc-select--box mdc-ripple-upgraded">
                                <select id="passive-s-{{charNum}}" class="mdc-select__native-control passive-selector link-field" data-charnum="{{charNum}}" data-skilltype="s" data-info="skillInfo">
                                    <option value="None" selected>---</option>
                                </select>
                                <label class="mdc-floating-label mdc-floating-label--float-above" for="passive-s-{{charNum}}" class="passive-s-label">
                                    Sacred Seal
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="tab-panel mdc-layout-grid">
                <div class="mdc-layout-grid__inner">
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <div class="mdc-text-field mdc-text-field--upgraded info-section-bottom current-hp">
                            <label class="mdc-floating-label mdc-floating-label--float-above curr-hp-label" for="curr-hp-{{charNum}}" data-charnum="{{charNum}}">
                                Current HP / <span id="hp-{{charNum}}-denom" class="denominator hp-{{charNum}}-read">1</span>
                            </label>
                            <input type="number" id="curr-hp-{{charNum}}" class="mdc-text-field__input more-than-zero curr-hp-val" data-charnum="{{charNum}}" value="1" autocomplete="off">
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
                        <div class="mdc-text-field mdc-text-field--upgraded info-section-bottom current-hp" id="spec-cooldown-line-{{charNum}}" >
                            <input type="number" id="spec-cooldown-{{charNum}}" class="mdc-text-field__input zero-or-more curr-hp-val" data-charnum="{{charNum}}" value="1" autocomplete="off">
                            <label id="spec-cooldown-label-{{charNum}}" class="mdc-floating-label mdc-floating-label--float-above" for="spec-cooldown-{{charNum}}" title="Special skills activate when cooldown reaches 0." data-charnum="{{charNum}}">
                                Special Cooldown / <span id="spec-cooldown-max-{{charNum}}" class="denominator">x</span>
                            </label>
                        </div>
                    </div>

                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6 info-section state-section" id="status-section-{{charNum}}" >
                        <h3 class="mdc-typography--caption">Status Effects</h3>
